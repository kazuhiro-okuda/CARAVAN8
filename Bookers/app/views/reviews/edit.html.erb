<% if flash[:notice] %>
	<p class="flash"><%= flash[:notice] %>
</p>
<% end %>

<h1>Editing Book</h1>

<%= form_for(@review) do |review| %>

    <h4>Title</h4>

    <%= review.text_field :title, class:"book_title" %>

    <h4>Body</h4>

    <%= review.text_area :body, class:"book_body" %>

    <div><%= review.submit 'Update Books' %></div>

<% end %>

    <%= link_to "Show", review_path(@review.id), class: "show_#{@review.id}" %>

    <%= link_to "Back", reviews_path, class:"back", class: "back" %>